@model Bruker

@{
    ViewData["Title"] = "Rediger bruker";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Navn" class="control-label"></label>
        <input asp-for="Navn" class="form-control" />
        <span asp-validation-for="Navn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KontaktInfo" class="control-label"></label>
        <input asp-for="KontaktInfo" class="form-control" />
        <span asp-validation-for="KontaktInfo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AntallSpill" class="control-label"></label>
        <input asp-for="AntallSpill" class="form-control" />
        <span asp-validation-for="AntallSpill" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Lagre</button>
    <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
